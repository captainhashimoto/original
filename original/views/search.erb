<div class="search center-vertical">
<h1>検索フォーム</h1>
<form action="/search" method="POST">
  <select name="athlete">
    <option selected="selected">選択してください</option>
    <% @users.each do |user| %>
      <option value="<%= user.name %>"><%= user.name %></option>
    <% end %>
  </select>
  <select name="event">
    <option selected="selected">選択してください</option>
    <option value="Run">Run</option>
    <option value="Swim">Swim</option>
    <option value="Bike">Bike</option>
  </select>
  <input type="submit" value="検索">
</form>
<h1>検索結果</h1>
<div>
<div>
  <% if !@videos.nil? %>
    <% @videos.each do |video| %>
    <div class="post center-vertical">
      <iframe width="320" height="180" src="https://www.youtube.com/embed/<%= video.video_id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			<p>選手：<%= video.athlete %></p>
			<p>種目：<%= video.event %></p>
			<p>コメント：<%= video.commnet %></p>
      </div>
      <% end %>
  <% else %>
  検索結果がありません
  <% end %>
    </div>
</div>