<div class="home">
	<h1><%= current_user.name %>の動画</h1>
<div class="post-wrapper">
<%if !@videos.nil?%>
  <% @videos.each do |video| %>
  	<div class="post">
			<div class="center-vertical">
				<iframe width="320" height="180" src="https://www.youtube.com/embed/<%= video.video_id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				<p>種目：<%= video.event %></p>
				<p>コメント：<%= video.commnet %></p>
				</div>
		</div>
	<%end%>
<%end%>
</div>
</div>